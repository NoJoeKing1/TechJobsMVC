<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form asp-controller="Search" asp-action="results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.
    }
    @if(ViewBag.jobs != null)
    {
        <h1>@ViewBag.title</h1>
        <h1>@ViewBag.name</h1>
        <h3>Number of jobs: @ViewBag.jobs.Count</h3>
        @foreach(Job job in ViewBag.jobs)
        {
            <table class="job-listing">
                <tr>
                    <td>ID: @job.Id</td>
                </tr>
                <tr>
                    <td>Name: @job.Name</td> 
                </tr>
                <tr>
                    <td>Employer: @job.Employer</td> 
                </tr>
                <tr>
                    <td>Location: @job.Location</td> 
                </tr>
                <tr>
                    <td>Position Type: @job.PositionType</td> 
                </tr>
                <tr>
                    <td>Core Competency: @job.CoreCompetency</td> 
                </tr>
            </table>
        }
    }
    
</div>